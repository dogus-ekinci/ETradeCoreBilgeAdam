@model DataAccess.Entities.Product

@{
    ViewData["Title"] = Model.Name + " Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
           @* <label asp-for="Name"></label>*@
        </dt>
        <dd class="col-10">
            @*@Model.Name*@
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.StockAmount)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.StockAmount) units
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.UnitPriceDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.UnitPriceDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.ExpirationDateDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.ExpirationDateDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.CategoryNameDisplay)
        </dd>
         <dt class="col-2">
            @Html.DisplayNameFor(model => model.ShopNamesDisplay)
        </dt>
        <dd class="col-10">
            @*@Html.DisplayFor(model => model.ShopNamesDisplay)*@
            @Html.Raw(Model.ShopNamesDisplay)   @* <br /> koyduğumuz html tag'ini algılamadığı için raw kullandık ve algılamasını sağladık*@
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>



